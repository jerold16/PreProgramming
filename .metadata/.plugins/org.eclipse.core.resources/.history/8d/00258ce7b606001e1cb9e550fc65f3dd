package Pattern;

public class diamondnum {
public static void main(String[] args) {
	int n=9, star=1,space=n/2;
	int s=0;
	for(int i=0;i<=n;i++) {
		for(int sp=0;sp<=space;sp++) {
			System.out.println(" ");
		}
		for(int st=0;st<=star;st++) {
			System.out.println(s++);
		}
		if(n<(n/2)+1) {
			star+=2;
			space--;
		}
		else {
			star-=2;
			space++;
		}
		System.out.println(" ");
	}
}
}
